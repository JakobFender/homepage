---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Timeline from "../components/Timeline.astro";
import Projects from "../components/Projects.astro";
import Repositories from "../components/Repositories.astro";
import Contact from "../components/Contact.astro";
import { Briefcase, GraduationCap } from "@lucide/astro";
import { getEntry, render } from "astro:content";
import { siteConfig } from "../config";
import profilePicture from "../assets/profile.jpg";

---

<Layout
  title={`${siteConfig.name} - Portfolio`}
  description={siteConfig.description}
>
  <main>
    <!-- Hero Section (Always visible) -->
    <Hero
      name={siteConfig.name}
      title={siteConfig.title}
      description={siteConfig.description}
      avatar={profilePicture}
      location={siteConfig.location}
      socialLinks={siteConfig.socialLinks}
    />

    <!-- Work Experience Section -->
    {
        siteConfig.sections.work && (
            <Timeline
                collection="work"
                variant="timeline"
                color="primary"
                icon={Briefcase}
                sectionTitle="Work Experience"
            />
        )
    }

    <!-- Education Section -->
    {
        siteConfig.sections.education && (
            <Timeline
                collection="education"
                variant="list"
                color="secondary"
                backgroundColor="base-300"
                icon={GraduationCap}
                sectionTitle="Education"
            />
        )
    }

    <!-- Projects Section -->
    {siteConfig.sections.projects && <Projects />}

    <!-- Repositories Section -->
    {siteConfig.sections.repositories && <Repositories />}

    <!-- Contact Section -->
    {siteConfig.sections.contact && <Contact />}
  </main>
</Layout>
